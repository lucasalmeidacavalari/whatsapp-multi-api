generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tempresa {
  id        String     @id @default(uuid())
  cpfcnpj   String     @unique
  ativo     Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  sessions  tsession[]
}

model tsession {
  id           String         @id @default(uuid())
  empresa      tempresa       @relation(fields: [empresaId], references: [id], onDelete: Cascade)
  empresaId    String
  sessionName  String
  numero       String
  sessionPath  String
  nomeCelular  String?
  isConnected  Boolean        @default(false)
  status       SessaoStatus   @default(INATIVA)
  ultimoUso    DateTime?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  logs         tsessionlog[]  // ðŸ‘ˆ ADICIONE ESTA LINHA

  @@unique([empresaId, numero])
  @@unique([empresaId, sessionName])
}

model tsessionlog {
  id          String     @id @default(uuid())
  session     tsession   @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId   String
  message     String
  createdAt   DateTime   @default(now())

  @@index([sessionId])
}

enum SessaoStatus {
  ATIVA
  INATIVA
  EXPIRADA
  ERRO
}
